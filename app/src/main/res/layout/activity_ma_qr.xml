<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaQR">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_qr"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            app:srcCompat="@android:color/background_dark"
             />
        <TextView
            android:id="@+id/txt_nameqr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below= "@id/img_qr"/>
        <TextView
            android:id="@+id/txt_diachi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dia chi"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below= "@id/txt_nameqr"/>
        <Button
            android:id="@+id/btn_maqr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quet ma QR"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_diachi"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>